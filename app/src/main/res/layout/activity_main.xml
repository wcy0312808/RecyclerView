<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="muliteitem.itheima.com.mulitrecycler.view.activity.MainActivity">

  <muliteitem.itheima.com.mulitrecycler.view.view.SimpleViewPagerIndicator
      android:id="@+id/SimpleViewPagerIndicator"
      android:layout_width="match_parent"
      android:layout_height="44dp"></muliteitem.itheima.com.mulitrecycler.view.view.SimpleViewPagerIndicator>
   <android.support.v4.view.ViewPager
       android:layout_below="@+id/SimpleViewPagerIndicator"
       android:id="@+id/ViewPager"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</RelativeLayout>
